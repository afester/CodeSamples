#!/usr/bin/make -f

# This file was automatically generated by stdeb 0.6.0+git at
# Fri, 06 Feb 2015 13:03:22 +0100

%:
	dh $@ --with python2,python3 --buildsystem=python_distutils

override_dh_auto_build:
	@echo "==> Building for Python2 ..."
	dh_auto_build
	@echo "==> Building for Python3 ..."
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py build; \
	done;
	tree
	@echo "================================================================="

override_dh_auto_install:
	@echo "==> Installing for Python2 ..."
	# dh_auto_install
	set -ex; for python in $(shell pyversions -r); do \
		$$python setup.py install --root=$(CURDIR)/debian/python-sample --install-layout=deb; \
	done;
	@echo "==> Installing for Python3 ..."
	tree
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py install --root=$(CURDIR)/debian/python3-sample | awk '{print "    \x1b[1;34m"$$0"\x1b[m"}' ; \
	done;
	tree
	@echo "================================================================="
